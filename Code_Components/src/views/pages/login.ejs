<%- include ('../partials/head') %>

<div class="text-center">
  <h1 class="blackjack-heading">Blackjack.<span style="color: #d12d36;">Net</span></h1>
</div>

<main>
  <link rel="stylesheet" href="../../resources/css/login.css">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card mt-5">
          <div class="card-body">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="POST">
              <div class="mb-3">
                <label for="exampleInputUsername1" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" required>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" required>
              </div>
              <div class="text-center">
                <p>Don't have an account? <a class="link" href="/register">Register</a></p>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Login</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card-images"></div> <!-- Cards from animation populate here-->

  <script src="../../resources/js/cardAnimation.js"></script>
</main>

<%- include ('../partials/footer') %>
